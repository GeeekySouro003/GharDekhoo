generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url = env("DATABASE_URL")
}

model User{
     id String @id @default(auto()) @map("_id") @db.ObjectId  // in database id will be mapped will be showm as _id 
     name String?
     userEmail String @unique // email is unique as using it the user will be differentiated
     image String?
     bookedPropertyVisits Json[]
     favPropertyID String[] @db.ObjectId
     ownedProperty Property[] @relation("Owner")


}

model Property{
    id String @id @default(auto()) @map("_id") @db.ObjectId
    title String
    description String
    price Int
    address String 
    city String
    country String
    image String
    amenities Json
    ownerEmail String 
    owner User @relation("Owner",fields: [ownerEmail],references: [userEmail]) //Property owner is a instance of the user as we are referencing details from the user one
   createdAt DateTime @default(now())
   updatedAt DateTime @updatedAt

      @@unique(fields: [address, ownerEmail])

}